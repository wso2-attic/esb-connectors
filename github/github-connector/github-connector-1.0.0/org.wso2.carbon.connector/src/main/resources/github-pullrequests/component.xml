<component name="github-pullrequests" type="synapse/template">
	<subComponents>
		<component name="listPullRequests">
			<file>listPullRequests.xml</file>
			<description>Lists all the pull requests</description>
		</component>
		<component name="getPullRequest">
			<file>getPullRequest.xml</file>
			<description>Retrieves a single pull request</description>
		</component>
		<component name="listPullRequestCommits">
			<file>listPullRequestCommits.xml</file>
			<description>List commits on a pull request</description>
		</component>
		<component name="getMergeStatus">
			<file>getMergeStatus.xml</file>
			<description>Retrieve the status as to if a pull request has been merged</description>
		</component>
		<component name="mergePullRequest">
			<file>mergePullRequest.xml</file>
			<description>This merges a pull request</description>
		</component>
	</subComponents>
</component>