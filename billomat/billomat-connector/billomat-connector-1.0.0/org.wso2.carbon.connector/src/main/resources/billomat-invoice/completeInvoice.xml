<!-- Method Documentation URL: http://www.billomat.com/en/api/invoices -->
<template name="completeInvoice" xmlns="http://ws.apache.org/ns/synapse">
   <parameter name="invoiceId" description="ID of the invoice which is going to get completed." />
   <parameter name="templateId" description="ID of the template from which the PDF is generated." />
   <sequence>
      <property name="uri.var.invoiceId" expression="$func:invoiceId" />
      <property name="uri.var.templateId" expression="$func:templateId" />
      <script language="js">
         <![CDATA[
            var templateId = mc.getProperty('uri.var.templateId');
            var jsonPayload = {};
            var complete = {};
            if (templateId != null && templateId != ""){
               complete.template_id = templateId;
            }
            jsonPayload.complete = complete;
            mc.setPayloadJSON(jsonPayload);
         ]]>
      </script>
      <call>
         <endpoint>
            <http method="put" uri-template="{+uri.var.apiUrl}/invoices/{+uri.var.invoiceId}/complete?api_key={+uri.var.apiKey}" />
         </endpoint>
      </call>
      <!-- Remove custom Headers from the API Response -->
      <header name="X-UA-Compatible" action="remove" scope="transport" />
      <header name="X-Rate-Limit-Reset" action="remove" scope="transport" />
      <header name="X-Rate-Limit-Remaining" action="remove" scope="transport" />
      <header name="Vary" action="remove" scope="transport" />
      <header name="Strict-Transport-Security" action="remove" scope="transport" />
      <header name="Pragma" action="remove" scope="transport" />
      <header name="Access-Control-Allow-Headers" action="remove" scope="transport" />
      <header name="Access-Control-Max-Age" action="remove" scope="transport" />
      <header name="Cache-Control" action="remove" scope="transport" />
      <header name="Access-Control-Allow-Methods" action="remove" scope="transport" />
      <header name="Access-Control-Allow-Origin" action="remove" scope="transport" />
   </sequence>
</template>
