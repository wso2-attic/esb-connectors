<component name="billomat-invoiceItem" type="synapse/template">
   <subComponents>
      <component name="createInvoiceItem">
         <file>createInvoiceItem.xml</file>
         <description>Create a new item in Billomat account using the provided Parameters.</description>
      </component>
      <component name="updateInvoiceItem">
         <file>updateInvoiceItem.xml</file>
         <description>Update details of the item identified by the provided item ID.</description>
      </component>
      <component name="getInvoiceItem">
         <file>getInvoiceItem.xml</file>
         <description>Retrieve details of a item identified by the provided item ID.</description>
      </component>
      <component name="listInvoiceItems">
         <file>listInvoiceItems.xml</file>
         <description>Retrieve a List of items from Billomat account.</description>
      </component>
   </subComponents>
</component>
