<component name="syncs" type="synapse/template">
    <subComponents>
        <component name="getSyncs">
            <file>getSyncs.xml</file>
            <description>Retrieves all syncs that match the criteria specified in the URL parameters.</description>
        </component>
        <component name="getSyncById">
            <file>getSyncById.xml</file>
            <description>Retrieves the specified sync.</description>
        </component>
        <component name="getSyncsDataById">
            <file>getSyncsDataById.xml</file>
            <description>Retrieves the data for the specified sync.</description>
        </component>
        <component name="getSyncsLogsById">
            <file>getSyncsLogsById.xml</file>
            <description>Retrieves the logs for the specified sync.</description>
        </component>
        <component name="getSyncsRejectsById">
            <file>getSyncsRejectsById.xml</file>
            <description>Retrieves raw data about validation failures during the specified import sync.</description>
        </component>
        <component name="createSync">
            <file>createSync.xml</file>
            <description>Triggers a sync on the import or export specified in the request body.</description>
        </component>
    </subComponents>
</component>