<!-- Method Documentation URL: https://msdn.microsoft.com/en-us/library/mt203562.aspx -->
<template name="createGroupDataset" xmlns="http://ws.apache.org/ns/synapse">
   <parameter name="groupId" description="GroupId of the Group to use." />
   <parameter name="defaultRetentionPolicy"
      description="Enables a default retention policy to automatically clean up old data while keeping a constant flow of new data going into your dashboard.None or basicFIFO." />
   <parameter name="datasetName" description="Name of the Dataset." />
   <parameter name="tables"
      description="Array of JSON object which contain table name and columns with field names and fiels types." />
   <sequence>
      <property name="uri.var.groupId" expression="$func:groupId" />
      <property name="uri.var.defaultRetentionPolicy" expression="$func:defaultRetentionPolicy" />
      <property name="uri.var.datasetName" expression="$func:datasetName" />
      <property name="uri.var.tables" expression="$func:tables" />
      <payloadFactory media-type="json">
         <format>
            {
            "name": "$1",
            "tables": $2
            }
         </format>
         <args>
            <arg expression="get-property('uri.var.datasetName')" />
            <arg expression="get-property('uri.var.tables')" />
         </args>
      </payloadFactory>
      <filter source="boolean(get-property('uri.var.defaultRetentionPolicy'))" regex="true">
         <then>
            <call>
               <endpoint>
                  <http method="post"
                     uri-template="{+uri.var.apiUrl}/groups/{+uri.var.groupId}/datasets?defaultRetentionPolicy={+uri.var.defaultRetentionPolicy}" />
               </endpoint>
            </call>
         </then>
         <else>
            <call>
               <endpoint>
                  <http method="post" uri-template="{+uri.var.apiUrl}/groups/{+uri.var.groupId}/datasets" />
               </endpoint>
            </call>
         </else>
      </filter>
      <property name="uri.var.statusCode" expression="$axis2:HTTP_SC" />
      <!-- If the call fails with 403 Unauthorized, then get a new access token by calling getAccessTokenFromRefreshToken
         method. -->
      <filter xpath="get-property('uri.var.statusCode') = 403 and get-property('uri.var.refreshTokenNegotiated') = 'false'">
         <then>
            <powerbi.getAccessTokenFromRefreshToken />
            <header name="Authorization" expression="fn:concat('Bearer ', get-property('uri.var.accessToken'))"
               scope="transport" />
            <powerbi.createDataset />
         </then>
      </filter>
      <!-- Remove custom Headers from the API Response -->
      <header name="X-Frame-Options" action="remove" scope="transport" />
      <header name="Strict-Transport-Security" action="remove" scope="transport" />
      <header name="RequestId" action="remove" scope="transport" />
      <header name="X-Content-Type-Options" action="remove" scope="transport" />
      <header name="OData-Version" action="remove" scope="transport" />
      <header name="Cache-Control" action="remove" scope="transport" />
   </sequence>
</template>