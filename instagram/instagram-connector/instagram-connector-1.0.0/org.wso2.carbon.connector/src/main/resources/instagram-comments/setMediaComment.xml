<template xmlns="http://ws.apache.org/ns/synapse" name="setMediaComment">
    <parameter name="mediaId" description="the media id"/>
    <parameter name="text" description="Text to post as a comment on the media object as specified in media-id"/>
    <sequence>
        <property name="uri.var.mediaId" expression="$func:mediaId"/>
        <property name="uri.var.text" expression="$func:text"/>
        <call>
            <endpoint>
                <http method="POST"
                      uri-template="{uri.var.apiUrl}/media/{+uri.var.mediaId}/comments?text={+uri.var.text}&amp;access_token={+uri.var.accessToken}"/>
            </endpoint>
        </call>
    </sequence>
</template>

