<!-- API Document: http://developers.hubspot.com/docs/methods/deals/get_deals_modified -->
<template name="getRecentlyModifiedDeals" xmlns="http://ws.apache.org/ns/synapse">
   <parameter name="offset" description="Used to page through the deals." />
   <parameter name="count" description="The number of companies to be returned." />
   <sequence>
      <property name="uri.var.offset" expression="$func:offset" />
      <property name="uri.var.count" expression="$func:count" />
      <property name="uri.var.urlQuery" value="" />
      <filter source="boolean(get-property('uri.var.offset'))" regex="true">
         <then>
            <property name="uri.var.urlQuery" expression="fn:concat(get-property('uri.var.urlQuery'),'&amp;offset=', get-property('uri.var.offset'))" />
         </then>
      </filter>
      <filter source="boolean(get-property('uri.var.count'))" regex="true">
         <then>
            <property name="uri.var.urlQuery" expression="fn:concat(get-property('uri.var.urlQuery'),'&amp;count=', get-property('uri.var.count'))" />
         </then>
      </filter>
      <call>
         <endpoint>
            <http method="get" uri-template="{uri.var.apiUrl}/deals/v1/deal/recent/modified{+uri.var.apiKey}{+uri.var.urlQuery}" />
         </endpoint>
      </call>
      <!-- Remove response custom header information -->
      <header name="Access-Control-Allow-Credentials" scope="transport" action="remove" />
      <header name="X-HubSpot-NotFound" scope="transport" action="remove" />
   </sequence>
</template>