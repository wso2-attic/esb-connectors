<component name="sendgrid-email" type="synapse/template">
    <subComponents>
        <component name="addEmail">
            <file>addEmail.xml</file>
            <description>Add one or more emails to a Recipient List.</description>
        </component>
        <component name="getEmail">
            <file>getEmail.xml</file>
            <description>Get the email addresses and associated fields for a Recipient List.</description>
        </component>
        <component name="countEmail">
            <file>countEmail.xml</file>
            <description>Retrieve the number of entries on a list.</description>
        </component>
        <component name="deleteEmail">
            <file>deleteEmail.xml</file>
            <description>Remove one or more emails from a Recipient List.</description>
        </component>
    </subComponents>
</component>