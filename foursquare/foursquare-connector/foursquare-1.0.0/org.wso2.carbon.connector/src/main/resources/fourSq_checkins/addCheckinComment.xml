<?xml version="1.0" encoding="UTF-8"?>
<template xmlns="http://ws.apache.org/ns/synapse" name="addCheckinComment">

    <parameter name="checkinId" description="Check-in ID of the check-in" />
    <parameter name="comment" description="Comment on the Check-in" />



    <sequence>
        <property name="HTTP_METHOD" value="POST" scope="axis2" type="STRING"/>
        <property name="uri.var.checkinId" expression="$func:checkinId" scope="default" type="STRING" />
        <property name="Accept-Encoding" scope="transport" action="remove"/>
        <property name="messageType" value="application/json" scope="axis2" type="STRING"/>
        <property name="uri.var.comment" expression="$func:comment" scope="default" type="STRING" />

        <payloadFactory media-type="json">
            <format>
                <soapenv:Envelope xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/">
                    <soapenv:Header/>
                    <soapenv:Body/>
                </soapenv:Envelope>
            </format>
            <args/>
        </payloadFactory>

        <property name="FORCE_HTTP_1.0" value="true" scope="axis2"/>
        <property name="messageType" value="application/json" scope="axis2" />
        <call>
            <endpoint xmlns="http://ws.apache.org/ns/synapse" name="HTTPEP">
                <http method="POST"
                      uri-template="legacy-encoding:{uri.var.foursquare.apiUrl}/v2/checkins/{uri.var.checkinId}/addcomment?v=20140626&amp;text={+uri.var.comment}&amp;oauth_token={+uri.var.foursquare.accessToken}" />
            </endpoint>
        </call>

    </sequence>

</template>
