<template name="gethistoricalStatusUpdate" xmlns="http://ws.apache.org/ns/synapse">

    <parameter name="companyId" description="The unique internal numeric company identifier" />
    <parameter name="updateKey" description="The unique identifier for company update" />
    <parameter name="timeGranularity" description="Granularity of statistics eg values:day,month" />
    <parameter name="startTimestamp" description="Starting timestamp of when the stats search should begin (milliseconds since epoch) " />
    <parameter name="endTimestamp" description="Ending timestamp of when the stats search should end (milliseconds since epoch)" />
    <sequence>
        <property name="uri.var.companyId" expression="$func:companyId" />
        <property name="uri.var.timeGranularity" expression="$func:timeGranularity" />
        <property name="uri.var.startTimestamp" expression="$func:startTimestamp" />
        <property name="uri.var.updateKey" expression="$func:updateKey" />
        <property name="uri.var.mandatoryParameter" value=""/>
        <property name="uri.var.mandatoryParameter" expression="fn:concat('start-timestamp=',get-property('uri.var.startTimestamp'),'&amp;time-granularity=',get-property('uri.var.timeGranularity'))" />


        <property name="uri.var.optionalParameter" value="" />
        <filter
                xpath="(not(get-property('uri.var.endTimestamp') = '' or  (not(string(get-property('uri.var.endTimestamp'))))))">
            <then>
                <property name="uri.var.optionalParameter"
                          expression="fn:concat(get-property('uri.var.optionalParameter'),'&amp;end-timestamp=',get-property('uri.var.endTimestamp'))"/>
            </then>
        </filter>
        <filter
                xpath="(not(get-property('uri.var.updateKey') = '' or  (not(string(get-property('uri.var.updateKey'))))))">
            <then>
                <property name="uri.var.optionalParameter"
                          expression="fn:concat(get-property('uri.var.optionalParameter'),'&amp;update-key=',get-property('uri.var.updateKey'))"/>
            </then>
        </filter>
        <call>
            <endpoint>
                <http method="get"
                      uri-template="{+uri.var.apiUrl}/v1/companies/{+uri.var.companyId}/historical-status-update-statistics?oauth2_access_token={+uri.var.accessToken}&amp;{+uri.var.mandatoryParameter}&amp;{uri.var.optionalParameter}&amp;format=json"/>
            </endpoint>
        </call>
        <!-- Remove response custom header information -->
        <header name="x-li-format" scope="transport" action="remove" />
        <header name="X-LI-UUID" scope="transport" action="remove" />
        <header name="X-Li-Pop" scope="transport" action="remove" />
        <header name="X-Li-Fabric" scope="transport" action="remove" />
        <header name="x-li-request-id" scope="transport" action="remove" />
        <header name="Set-Cookie" scope="transport" action="remove" />
    </sequence>
</template>