<template name="getAdditionalProfileInfo" xmlns="http://ws.apache.org/ns/synapse">

    <parameter name="companyId" description="The unique internal numeric company identifier" />
    <parameter name="properties" description="Include (id,name,description)" />

    <sequence>
        <property name="uri.var.companyId" expression="$func:companyId" />
        <property name="uri.var.properties" expression="$func:properties" />
        <filter
                xpath="get-property('uri.var.properties') = '' or not(string(get-property('uri.var.properties')))">
            <then>
                <property name="uri.var.properties" value="" />
            </then>
            <else>
                <property name="uri.var.properties"
                          expression="fn:concat(':(', get-property('uri.var.properties'),')')" />
            </else>
        </filter>
        <call>
            <endpoint>
                <http method="get"
                      uri-template="{+uri.var.apiUrl}/v1/companies/{+uri.var.companyId}{+uri.var.properties}?oauth2_access_token={+uri.var.accessToken}&amp;format=json"/>
            </endpoint>
        </call>
        <!-- Remove response custom header information -->
        <header name="x-li-format" scope="transport" action="remove" />
        <header name="X-LI-UUID" scope="transport" action="remove" />
        <header name="X-Li-Pop" scope="transport" action="remove" />
        <header name="X-Li-Fabric" scope="transport" action="remove" />
        <header name="x-li-request-id" scope="transport" action="remove" />
        <header name="Set-Cookie" scope="transport" action="remove" />
    </sequence>
</template>