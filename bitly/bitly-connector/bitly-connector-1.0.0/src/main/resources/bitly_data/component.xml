<component name="bitly_data" type="synapse/template">
    <subComponents>
        <component name="getHighvalue">
            <file>getHighvalue.xml</file>
            <description>Get popular bitly links at this particular moment</description>
        </component>

        <component name="getSearch">
            <file>getSearch.xml</file>
            <description>Search links receiving clicks across bitly by content</description>
        </component>

        <component name="getLinkInfo">
            <file>getLinkInfo.xml</file>
            <description>Returns metadata about a single bitly link</description>
        </component>

        <component name="getLinkContent">
            <file>getLinkContent.xml</file>
            <description>Returns the “main article” from the linked page</description>
        </component>

        <component name="getLinkCatagory">
            <file>getLinkCatagory.xml</file>
            <description>Returns the detected categories for a document</description>
        </component>

    </subComponents>
</component>
