<template xmlns="http://ws.apache.org/ns/synapse" name="getUserNetworkHistory">


    <parameter name="isExpandClientId"
               description="optional true or false whether to provide additional information about encoding application " />

    <parameter name="limitForGetNW"
               description="optional integer in the range of 1 to 100 that specifies the number of records to return " />

    <parameter name="isExpandUser"
               description="optional - true or false - include extra user info in response " />

    <sequence>
        <property name="uri.var.isExpandClientId" expression="$func:isExpandClientId" />
        <property name="uri.var.limitForGetNW" expression="$func:limitForGetNW" />
        <property name="uri.var.isExpandUser" expression="$func:isExpandUser" />

        <filter
                xpath="(not(get-property('uri.var.isExpandClientId'))) = '' or (not(string(get-property('uri.var.isExpandClientId'))))">
            <then>
                <property name="uri.var.apiParameters"
                          expression="fn:concat(get-property('uri.var.apiParameters'),'&amp;expand_client_id=',get-property('uri.var.isExpandClientId'))" />
            </then>

        </filter>
        <filter
                xpath="(not(get-property('uri.var.limitForGetNW'))) = '' or (not(string(get-property('uri.var.limitForGetNW'))))">
            <then>
                <property name="uri.var.apiParameters"
                          expression="fn:concat(get-property('uri.var.apiParameters'),'&amp;limit=',get-property('uri.var.limitForGetNW'))" />
            </then>

        </filter>
        <filter
                xpath="(not(get-property('uri.var.isExpandUser'))) = '' or (not(string(get-property('uri.var.isExpandUser'))))">
            <then>
                <property name="uri.var.apiParameters"
                          expression="fn:concat(get-property('uri.var.apiParameters'),'&amp;expand_user=',get-property('uri.var.isExpandUser'))" />
            </then>

        </filter>

        <property name="Accept-Encoding" action="remove" scope="transport" />
        <payloadFactory media-type="xml">
            <format>
                <soapenv:Envelope xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/">
                    <soapenv:Header/>
                    <soapenv:Body >

                    </soapenv:Body>
                </soapenv:Envelope>
            </format>
            <args/>

        </payloadFactory>

        <call>
            <endpoint>
                <http method="get"
                      uri-template="https://api-ssl.bitly.com/v3/user/network_history?access_token={uri.var.bitly.accessToken}&amp;{uri.var.apiParameters}" />
            </endpoint>

        </call>
        <property name="messageType" value="application/json" scope="axis2" />
    </sequence>
</template>
