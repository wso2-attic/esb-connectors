<component name="bitly_bundle" type="synapse/template">
    <subComponents>

        <component name="getBundlesByUser">
            <file>getBundlesByUser.xml</file>
            <description>Returns a list of public bundles created by a user</description>
        </component>

        <component name="getBundleContents">
            <file>getBundleContents.xml</file>
            <description>Returns information about a bundle</description>
        </component>

        <component name="createBundle">
            <file>createBundle.xml</file>
            <description>Create a new bundle for the authenticated user</description>
        </component>

        <component name="editBundle">
            <file>editBundle.xml</file>
            <description>Edit a bundle for the authenticated user</description>
        </component>

        <component name="getBundlEviewCount">
            <file>getBundlEviewCount.xml</file>
            <description>Get the number of views for a bundle</description>
        </component>

        <component name="getBundleLinkRemove">
            <file>getBundleLinkRemove.xml</file>
            <description>Remove a link from a bitly bundle</description>
        </component>

        <component name="getUserBundleHistory">
            <file>getUserBundleHistory.xml</file>
            <description>Returns all bundles this user has access to</description>
        </component>

        <component name="addLinkToBundle">
            <file>addLinkToBundle.xml</file>
            <description>Adds a link to a bitly bundle</description>
        </component>
        <component name="deleteBundle">
            <file>deleteBundle.xml</file>
            <description>Delete selected bitly bundle</description>
        </component>

    </subComponents>
</component>