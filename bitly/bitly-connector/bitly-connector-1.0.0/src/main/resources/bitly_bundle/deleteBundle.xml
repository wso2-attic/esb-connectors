<template xmlns="http://ws.apache.org/ns/synapse" name="deleteBundle">

    <parameter name="deleteBundleLink"
               description="the URL of the deleting bitly bundle " />

    <sequence>

        <property name="uri.var.deleteBundleLink" expression="$func:deleteBundleLink" />

        <property name="Accept-Encoding" action="remove" scope="transport" />
        <payloadFactory media-type="xml">
            <format>
                <soapenv:Envelope xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/">
                    <soapenv:Header/>
                    <soapenv:Body >

                    </soapenv:Body>
                </soapenv:Envelope>
            </format>
            <args/>

        </payloadFactory>

        <call>
            <endpoint>
                <http method="get"
                      uri-template="https://api-ssl.bitly.com/v3/bundle/archive?access_token={uri.var.bitly.accessToken}&amp;bundle_link={uri.var.deleteBundleLink}" />
            </endpoint>

        </call>
        <property name="messageType" value="application/json" scope="axis2" />
    </sequence>
</template>

