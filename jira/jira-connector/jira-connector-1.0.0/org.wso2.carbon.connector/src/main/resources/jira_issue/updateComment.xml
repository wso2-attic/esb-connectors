<template xmlns="http://ws.apache.org/ns/synapse" name="updateComment">
    <parameter name="issueIdOrKey" description="a String containing the issue id."/>
    <parameter name="commentId" description="a String containing the issue id."/>
    <parameter name="comment" description="a String containing the comment to be posted"/>
    <parameter name="visibleRole" description="a String containing the visible role"/>
    <parameter name="expand" description="The optional flags: renderedBody (provides body rendered in HTML)."/>
    <sequence>
        <property name="uri.var.jira.issueIdOrKey" expression="$func:issueIdOrKey"/>
        <property name="uri.var.jira.commentId" expression="$func:commentId"/>
        <property name="uri.var.jira.expand" expression="$func:expand"/>
        <property name="Accept-Encoding" action="remove" scope="transport"/>
        <payloadFactory media-type="json">
            <format>{
                "body": "$1",
                "visibility": {
                "type": "role",
                "value": "$2"
                }
                }
            </format>
            <args>
                <arg evaluator="xml" expression="$func:comment"/>
                <arg evaluator="xml" expression="$func:visibleRole"/>
            </args>
        </payloadFactory>
        <property name="messageType" value="application/json" scope="axis2"/>
        <call>
            <endpoint>
                <http method="PUT"
                      uri-template="{uri.var.jira.url}/rest/api/2/issue/{uri.var.jira.issueIdOrKey}/comment/{uri.var.jira.commentId}?expand={uri.var.jira.expand}"/>
            </endpoint>
        </call>
    </sequence>
</template>