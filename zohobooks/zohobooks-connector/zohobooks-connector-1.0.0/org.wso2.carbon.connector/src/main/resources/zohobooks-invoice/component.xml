<component name="zohobooks-invoice" type="synapse/template">
   <subComponents>
      <component name="createInvoice">
         <file>createInvoice.xml</file>
         <description>Create a new invoice in ZohoBooks account using the provided Parameters.</description>
      </component>
      <component name="getInvoice">
         <file>getInvoice.xml</file>
         <description>Retrieve details of a invoice identified by the provided invoice ID.</description>
      </component>
      <component name="listInvoices">
         <file>listInvoices.xml</file>
         <description>Retrieve a List of invoices from ZohoBooks account.</description>
      </component>
      <component name="emailInvoices">
         <file>emailInvoices.xml</file>
         <description>Email Invoices to the recipients.</description>
      </component>
   </subComponents>
</component>
