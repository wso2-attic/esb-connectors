<template xmlns="http://ws.apache.org/ns/synapse" name="getContactListDetails">
    <parameter name="userId" description="Id of the user to retrieve the contact list details"/>
    <parameter name="contactListId" description="Id of the contact list"/>
    <sequence>
        <property name="uri.var.userId" expression="$func:userId"/>
        <property name="uri.var.contactListId" expression="$func:contactListId"/>
        <call>
            <endpoint>
                <http method="GET"
                      uri-template="{uri.var.eventbrite.apiUrl}/users/{uri.var.userId}/contact_lists/{uri.var.contactListId}/?token={uri.var.eventbrite.accessToken}"/>
                <property name="Accept" value="*/*" scope="transport"/>
            </endpoint>
        </call>
    </sequence>
</template>
