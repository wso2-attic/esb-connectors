<template name="getSettings" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="setting" description="The id of the user setting."/>

    <sequence>
        <!-- Required parameters -->
        <property name="uri.var.setting" expression="$func:setting"/>

        <call>
            <endpoint>
                <http method="get"
                      uri-template="legacy-encoding:{uri.var.apiUrl}/calendar/v3/users/me/settings/{+uri.var.setting}"/>
            </endpoint>
        </call>

        <!-- Remove response's custom header information -->
        <header name="X-Frame-Options" scope="transport" action="remove"/>
        <header name="X-XSS-Protection" scope="transport" action="remove"/>
        <header name="Alternate-Protocol" scope="transport" action="remove"/>
        <header name="X-Content-Type-Options" scope="transport" action="remove"/>

    </sequence>
</template>