<component name="geonames-hierarchies" type="synapse/template">
  <subComponents>
    	<component name="getChildren">
      <file>getChildren.xml</file>
      <description>Returns the children (admin divisions and populated places) for a given geonameId.</description>
    </component>
    	<component name="listHierarchyOfPlaceNames">
      <file>listHierarchyOfPlaceNames.xml</file>
      <description>Returns all GeoNames higher up in the hierarchy of a place name (returns a list of GeoName records, ordered by hierarchy level. The top hierarchy (continent) is the first element in the list )</description>
    </component>
    </subComponents>
</component>