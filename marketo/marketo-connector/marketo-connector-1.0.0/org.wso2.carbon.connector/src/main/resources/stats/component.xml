<component name="stats" type="synapse/template">
    <subComponents>
        <component name="getDailyUsage">
            <file>getDailyUsage.xml</file>
            <description>Retrieves total and user-level usage count for the day</description>
        </component>
        <component name="getLast7DaysUsage">
            <file>getLast7DaysUsage.xml</file>
            <description>Retrieves total and user-level usage count for the last 7 days</description>
        </component>
        <component name="getDailyErrors">
            <file>getDailyErrors.xml</file>
            <description>Retrieves error codes and their count for the day</description>
        </component>
        <component name="getLast7DaysErrors">
            <file>getLast7DaysErrors.xml</file>
            <description>Retrieves error codes and their count for the last 7 days</description>
        </component>
    </subComponents>
</component>