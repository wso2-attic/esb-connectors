<component name="campaigns" type="synapse/template">
    <subComponents>
        <component name="getCampaignById">
            <file>getCampaignById.xml</file>
            <description>Retrieves a campaign for a given Marketo campaign Id</description>
        </component>
        <component name="getMultipleCampaigns">
            <file>getMultipleCampaigns.xml</file>
            <description>Retrieves multiple campaigns</description>
        </component>
        <component name="scheduleCampaign">
            <file>scheduleCampaign.xml</file>
            <description>Schedules a batch Smart Campaign to run either immediately or at a future date</description>
        </component>
        <component name="requestCampaign">
            <file>requestCampaign.xml</file>
            <description>Runs an existing Marketo lead in a Marketo Smart Campaign.</description>
        </component>
    </subComponents>
</component>