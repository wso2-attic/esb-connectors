<component name="producteev-tasks" type="synapse/template">
   <subComponents>
      <component name="createTask">
         <file>createTask.xml</file>
         <description>Create a new task in Producteev account using the provided Parameters.</description>
      </component>
      <component name="getTask">
         <file>getTask.xml</file>
         <description>Retrieve task details by ID.</description>
      </component>
      <component name="updateTask">
         <file>updateTask.xml</file>
         <description>Update details of the task identified by the provided task ID.</description>
      </component>
      <component name="assignTask">
         <file>assignTask.xml</file>
         <description>Add a user as a responsible for the task.</description>
      </component>
      <component name="removeAssignee">
         <file>removeAssignee.xml</file>
         <description>Remove a Responsible of a task.</description>
      </component>
      <component name="addLabelToTask">
         <file>addLabelToTask.xml</file>
         <description>Add a label to a task.</description>
      </component>
      <component name="addFollowerToTask">
         <file>addFollowerToTask.xml</file>
         <description>Add a user as a Follower.</description>
      </component>
      <component name="listTaskNotes">
         <file>listTaskNotes.xml</file>
         <description>Retrieve the Task's Notes.</description>
      </component>
      <component name="listTasks">
         <file>listTasks.xml</file>
         <description>Get a list of tasks.</description>
      </component>
   </subComponents>
</component>
