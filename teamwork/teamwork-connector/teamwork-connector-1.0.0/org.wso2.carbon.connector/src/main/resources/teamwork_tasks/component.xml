<component name="teamwork_tasks" type="synapse/template">
    <subComponents>
        <component name="createTask">
            <file>createTask.xml</file>
            <description>Create a single task.</description>
        </component>
	    <component name="updateTask">
            <file>updateTask.xml</file>
            <description>Modifies a single task.</description>
        </component>
        <component name="deleteTask">
            <file>deleteTask.xml</file>
            <description>Delete a task.</description>
        </component>
        <component name="getTask">
            <file>getTask.xml</file>
            <description>Returns a single task identified by its ID.</description>
        </component>
        <component name="getAllTasks">
            <file>getAllTasks.xml</file>
            <description>Retrieves all tasks.</description>
        </component>
        <component name="getTasksOnProject">
            <file>getTasksOnProject.xml</file>
            <description>Retrieve all the tasks on a project.</description>
        </component>
        <component name="getTasksOnTaskList">
            <file>getTasksOnTaskList.xml</file>
            <description>Retrieve all the tasks on a task list.</description>
        </component>
        <component name="reorderTasks">
            <file>reorderTasks.xml</file>
            <description>Reorder the Tasks.</description>
        </component>
        <component name="completeATask">
            <file>completeATask.xml</file>
            <description>The specified task is marked as complete.</description>
        </component>
        <component name="uncompleteATask">
            <file>uncompleteATask.xml</file>
            <description>The specified task is marked as incomplete.</description>
        </component>
    </subComponents>
</component>
