<component name="teamwork_messages" type="synapse/template">
    <subComponents>
        <component name="updateMessage">
            <file>updateMessage.xml</file>
            <description>Modifies the message data.</description>
        </component>
        <component name="deleteMessage">
            <file>deleteMessage.xml</file>
            <description>Delete a message.</description>
        </component>
        <component name="getMessage">
            <file>getMessage.xml</file>
            <description>Retrieves a message.</description>
        </component>
        <component name="getLatestMessages">
            <file>getLatestMessages.xml</file>
            <description>Retrieves the 25 most recent messages.</description>
        </component>
        <component name="archiveAMessage">
            <file>archiveAMessage.xml</file>
            <description>Archive a message.</description>
        </component>
        <component name="unarchiveAMessage">
            <file>unarchiveAMessage.xml</file>
            <description>Unarchive a message.</description>
        </component>
        <component name="getArchivedMessages">
            <file>getArchivedMessages.xml</file>
            <description>Retrieves all archived messages.</description>
        </component>
        <component name="getArchivedMessagesByCategory">
            <file>getArchivedMessagesByCategory.xml</file>
            <description>Retrieves all archived messages by category.</description>
        </component>
        <component name="getMessagesByCategory">
            <file>getMessagesByCategory.xml</file>
            <description>Retrieves messages by category.</description>
        </component>
    </subComponents>
</component>