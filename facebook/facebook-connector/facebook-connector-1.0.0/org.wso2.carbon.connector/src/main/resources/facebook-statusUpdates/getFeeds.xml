<template name="getFeeds" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="userId" description="The userId"/>
    <parameter name="numOfFeeds" description="The number of Feeds to retrieve"/>
    <parameter name="fields" description="The fields which belongs to an object"/>
    <sequence>
        <property name="uri.var.userId" expression="$func:userId"/>
        <property name="uri.var.numOfFeeds" expression="$func:numOfFeeds"/>
        <property name="uri.var.fields" expression="$func:fields"/>
        <call>
            <endpoint>
                <http method="get"
                      uri-template="{uri.var.apiUrl}/{uri.var.apiVersion}/{uri.var.userId}/feed?limit={uri.var.numOfFeeds}&amp;access_token={uri.var.accessToken}&amp;fields={+uri.var.fields}"/>
            </endpoint>
        </call>
        <property name="messageType" value="application/json" scope="axis2"/>
        <!-- Remove response custom header information -->
        <header name="X-FB-Debug" scope="transport" action="remove"/>
        <header name="X-FB-Rev" scope="transport" action="remove"/>
        <header name="WWW-Authenticate" scope="transport" action="remove"/>
    </sequence>
</template>