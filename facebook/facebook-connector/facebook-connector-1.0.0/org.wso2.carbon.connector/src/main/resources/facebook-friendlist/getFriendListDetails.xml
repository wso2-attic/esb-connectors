<?xml version="1.0" encoding="UTF-8"?>
<template name="getFriendListDetails" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="friendListId" description="Unique identifier of the friendList"/>
    <parameter name="fields" description="The fields which belongs to an object"/>
    <sequence>
        <property name="uri.var.friendListId" expression="$func:friendListId"/>
        <property name="uri.var.fields" expression="$func:fields"/>
        <call>
            <endpoint>
                <http method="get" uri-template="{uri.var.apiUrl}/{uri.var.apiVersion}/{uri.var.friendListId}?access_token={uri.var.accessToken}&amp;fields={+uri.var.fields}"/>
            </endpoint>
        </call>
        <!-- Remove response custom header information -->
        <header name="X-FB-Debug" scope="transport" action="remove" />
        <header name="X-FB-Rev" scope="transport" action="remove" />
        <header name="WWW-Authenticate" scope="transport" action="remove" />
    </sequence>
</template>