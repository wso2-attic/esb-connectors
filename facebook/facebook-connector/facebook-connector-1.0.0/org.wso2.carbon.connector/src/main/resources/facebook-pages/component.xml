<component name="facebook-pages" type="synapse/template">
    <subComponents>
        <component name="getPageDetails">
            <file>getPageDetails.xml</file>
            <description>Get details of a page by ID.</description>
        </component>
        <component name="updatePageDetails">
            <file>updatePageDetails.xml</file>
            <description>Update details of a page.</description>
        </component>
        <component name="createPageAlbum">
            <file>createPageAlbum.xml</file>
            <description>Create a new album for the page.</description>
        </component>
        <component name="blockUserFromPage">
            <file>blockUserFromPage.xml</file>
            <description>Block a user from the page.</description>
        </component>
        <component name="publishPageMilestone">
            <file>publishPageMilestone.xml</file>
            <description>Create page milestone</description>
        </component>
        <component name="unblockUserFromPage">
            <file>unblockUserFromPage.xml</file>
            <description>Remove a user block.</description>
        </component>
        <component name="publishPagePost">
            <file>publishPagePost.xml</file>
            <description>Post to a pages wall.</description>
        </component>
        <component name="createPageOffer">
            <file>createPageOffer.xml</file>
            <description>Create an offer for this page.</description>
        </component>
        <component name="updatePagePicture">
            <file>updatePagePicture.xml</file>
            <description>Update a pages profile picture.</description>
        </component>
        <component name="addPhotoToPage">
            <file>addPhotoToPage.xml</file>
            <description>Add a new photo to a page.</description>
        </component>
        <component name="replyToConversation">
            <file>replyToConversation.xml</file>
            <description>Replies to a conversation in a page.</description>
        </component>
        <component name="addPageVideo">
            <file>addPageVideo.xml</file>
            <description>Adding a video to a page.</description>
        </component>
    </subComponents>
</component>