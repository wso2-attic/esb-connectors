<template name="retrieveAnApplicationFeeRefund" xmlns="http://ws.apache.org/ns/synapse">
   <!-- Required parameters -->
   <parameter name="applicationFeeId" description="ID of the application fee refunded"/>
   <parameter name="refundId" description="ID of refund to retrieve"/>

   <sequence>
      <property name="uri.var.applicationFeeId" expression="$func:applicationFeeId"/>
      <property name="uri.var.refundId" expression="$func:refundId"/>

      <call>
         <endpoint>
            <http method="get"
                  uri-template="{uri.var.apiUrl}/{uri.var.apiVersion}/application_fees/{+uri.var.applicationFeeId}/refunds/{+uri.var.refundId}"/>
         </endpoint>
      </call>
   </sequence>
</template>