<template name="deleteAnInvoiceItem" xmlns="http://ws.apache.org/ns/synapse">
   <!-- Required parameters -->
   <parameter name="invoiceItemId" description="The identifier of the invoice item to be deleted"/>

   <sequence>
      <property name="uri.var.invoiceItemId" expression="$func:invoiceItemId"/>
      <call>
         <endpoint>
            <http method="delete"
                  uri-template="{uri.var.apiUrl}/{uri.var.apiVersion}/invoiceitems/{+uri.var.invoiceItemId}"/>
         </endpoint>
      </call>
   </sequence>
</template>