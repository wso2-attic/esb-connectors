<component name="clio-task" type="synapse/template">
   <subComponents>
      <component name="createTask">
         <file>createTask.xml</file>
         <description>Create a new task in Clio account using the provided Parameters.</description>
      </component>
      <component name="getTask">
         <file>getTask.xml</file>
         <description>Retrieve details of a task identified by the provided task ID.</description>
      </component>
      <component name="listTasks">
         <file>listTasks.xml</file>
         <description>Retrieve a List of tasks from Clio account.</description>
      </component>
      <component name="updateTask">
         <file>updateTask.xml</file>
         <description>Update details of the task identified by the provided task ID.</description>
      </component>
   </subComponents>
</component>
