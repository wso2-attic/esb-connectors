<!-- Method Documentation URL: https://cloud.google.com/bigquery/docs/reference/v2/datasets/list -->
<template name="listDatasets" xmlns="http://ws.apache.org/ns/synapse">
   <parameter name="projectId" description="The Id of the project which the datasets are belongs to." />
   <parameter name="maxResults" description="The max results per page." />
   <parameter name="pageToken" description="The page token value." />
   <parameter name="isAll" description="Boolean value to determine whether to list all datasets, including hidden ones." />
   <sequence>
      <property name="uri.var.projectId" expression="$func:projectId" />
      <property name="uri.var.maxResults" expression="$func:maxResults" />
      <property name="uri.var.pageToken" expression="$func:pageToken" />
      <property name="uri.var.isAll" expression="$func:isAll" />
      <script language="js">
         <![CDATA[
            var maxResults = mc.getProperty('uri.var.maxResults');
            var pageToken = mc.getProperty('uri.var.pageToken');
            var isAll = mc.getProperty('uri.var.isAll');
            var commonQueryParams = '' + mc.getProperty('uri.var.commonQueryParams');
            var urlQuery = '';
            if (commonQueryParams != null && commonQueryParams != "") {
               urlQuery =  commonQueryParams;
            }
            if (maxResults != null && maxResults != "") {
               urlQuery += "maxResults=" + maxResults +"&";
            }
            if (pageToken != null && pageToken != "") {
               urlQuery += "pageToken=" + pageToken +"&";
            }
            if (isAll != null && isAll != "") {
               urlQuery += "all=" + isAll +"&";
            }
            // Add a leading '?' and remove the trailing '&'
            if (urlQuery != "") {
               urlQuery = '?' + urlQuery.substring(0, urlQuery.length - 1);
               mc.setProperty('uri.var.urlQuery', urlQuery);
            }
         ]]>
      </script>
      <call>
         <endpoint>
            <http method="get" uri-template="{+uri.var.apiUrl}/bigquery/v2/projects/{+uri.var.projectId}/datasets{+uri.var.urlQuery}" />
         </endpoint>
      </call>
      <property name="uri.var.statusCode" expression="$axis2:HTTP_SC" />
      <!-- If the call fails with 401 Unauthorized, then get a new access token by calling getAccessTokenFromRefreshToken
         method. -->
      <filter xpath="get-property('uri.var.statusCode') = 401 and get-property('uri.var.refreshTokenNegotiated') = 'false'">
         <then>
            <bigquery.getAccessTokenFromRefreshToken />
            <header name="Authorization" expression="fn:concat('Bearer ', get-property('uri.var.accessToken'))"
               scope="transport" />
            <bigquery.listDatasets />
         </then>
      </filter>
      <!-- Remove custom Headers from the API Response -->
      <header name="Expires" action="remove" scope="transport" />
      <header name="Cache-Control" action="remove" scope="transport" />
      <header name="Alt-Svc" action="remove" scope="transport" />
      <header name="Alternate-Protocol" action="remove" scope="transport" />
      <header name="X-Content-Type-Options" action="remove" scope="transport" />
      <header name="X-Frame-Options" action="remove" scope="transport" />
      <header name="X-XSS-Protection" action="remove" scope="transport" />
      <header name="WWW-Authenticate" action="remove" scope="transport" />
      <header name="Pragma" action="remove" scope="transport" />
      <header name="Accept-Ranges" action="remove" scope="transport" />
   </sequence>
</template>