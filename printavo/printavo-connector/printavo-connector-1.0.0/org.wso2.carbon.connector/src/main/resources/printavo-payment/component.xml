<component name="printavo-payment" type="synapse/template">
   <subComponents>
      <component name="createPayment">
         <file>createPayment.xml</file>
         <description>Create a new payment in Printavo account using the provided Parameters.</description>
      </component>
      <component name="getPayment">
         <file>getPayment.xml</file>
         <description>Retrieve details of a payment identified by the provided payment ID.</description>
      </component>
