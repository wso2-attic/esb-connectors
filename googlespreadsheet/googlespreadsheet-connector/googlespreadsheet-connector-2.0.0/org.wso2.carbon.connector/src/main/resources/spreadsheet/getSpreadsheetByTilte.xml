<template name="getSpreadsheetByTilte" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="spreadsheetTitle" description="The title of the spreadsheet"/>
    <sequence>
        <property name="uri.var.spreadsheetTitle" expression="$func:spreadsheetTitle"/>
        <property name="REQUEST_HOST_HEADER" scope="axis2" value="spreadsheets.google.com"/>
        <call>
            <endpoint>
                <http method="get"
                      uri-template="{+uri.var.apiUrl}/feeds/spreadsheets/private/full?title={+uri.var.spreadsheetTitle}"/>
            </endpoint>
        </call>
        <!-- Remove response custom header information -->
        <header name="x-li-format" scope="transport" action="remove"/>
        <header name="X-LI-UUID" scope="transport" action="remove"/>
        <header name="X-Li-Pop" scope="transport" action="remove"/>
        <header name="X-Li-Fabric" scope="transport" action="remove"/>
        <header name="x-li-request-id" scope="transport" action="remove"/>
    </sequence>
</template>