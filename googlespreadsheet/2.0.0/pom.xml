<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<!-- <parent> <groupId>org.wso2.carbon</groupId> <artifactId>connectors</artifactId> 
		<version>4.2.0</version> <relativePath>../../pom.xml</relativePath> </parent> -->
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.wso2.carbon.connector</groupId>
	<artifactId>org.wso2.carbon.connector.googlespreadsheet</artifactId>
	<packaging>bundle</packaging>
	<version>2.0.0</version>
	<name>WSO2 Carbon - Cloud Connector For Google Spreadsheet</name>
	<url>http://wso2.org</url>

	<repositories>
		<repository>
			<id>wso2-maven2-repository</id>
			<url>http://dist.wso2.org/maven2</url>
		</repository>
	</repositories>

	<dependencies>
		<dependency>
			<groupId>org.wso2.carbon</groupId>
			<artifactId>org.wso2.carbon.mediation.initializer</artifactId>
			<version>4.2.0</version>
		</dependency>
		<dependency>
			<groupId>org.apache.synapse</groupId>
			<artifactId>synapse-core</artifactId>
			<version>2.1.3-wso2v1-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.google.gdata</groupId>
			<artifactId>gdata-core</artifactId>
			<version>1.0.0.wso2v1</version>
		</dependency>
		<dependency>
			<groupId>com.google.gdata</groupId>
			<artifactId>gdata-spreadsheet</artifactId>
			<version>3.0.0.wso2v1</version>
		</dependency>
		<dependency>
			<groupId>com.google.gdata</groupId>
			<artifactId>gdata-docs</artifactId>
			<version>3.0.0.wso2v1</version>
		</dependency>
		<dependency>
			<groupId>com.google.gdata</groupId>
			<artifactId>gdata-media</artifactId>
			<version>1.0.0.wso2v1</version>
		</dependency>
		<dependency>
			<groupId>com.google.gdata</groupId>
			<artifactId>gdata-client</artifactId>
			<version>1.0.0.wso2v1</version>
		</dependency>
		<dependency>
			<groupId>org.wso2.carbon</groupId>
			<artifactId>org.wso2.carbon.connector.core</artifactId>
			<version>4.2.0</version>
		</dependency>
	<dependency>
		<groupId>com.google.apis</groupId>
		<artifactId>google-api-services-oauth2</artifactId>
		<version>v1-rev80-1.19.0</version>
	</dependency>

	</dependencies>

	<properties>
		<axis2.osgi.version.range>[1.6.1.wso2v1, 1.7.0)</axis2.osgi.version.range>
		<axiom.osgi.version.range>[1.2.11.wso2v2, 1.3.0)</axiom.osgi.version.range>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.0</version>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>copy</id>
						<phase>generate-test-resources</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>com.google.gdata</groupId>
									<artifactId>gdata-core</artifactId>
									<version>1.0.0.wso2v1</version>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>target/connector/dependencies</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>com.google.gdata</groupId>
									<artifactId>gdata-spreadsheet</artifactId>
									<version>3.0.0.wso2v1</version>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>target/connector/dependencies</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>com.google.gdata</groupId>
									<artifactId>gdata-docs</artifactId>
									<version>3.0.0.wso2v1</version>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>target/connector/dependencies</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>com.google.gdata</groupId>
									<artifactId>gdata-media</artifactId>
									<version>1.0.0.wso2v1</version>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>target/connector/dependencies</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>com.google.gdata</groupId>
									<artifactId>gdata-client</artifactId>
									<version>1.0.0.wso2v1</version>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>target/connector/dependencies</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>com.google.http-client</groupId>
									<artifactId>google-http-client</artifactId>
									<version>1.19.0</version>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>target/connector/dependencies</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>com.google.http-client</groupId>
									<artifactId>google-http-client-jackson2</artifactId>
									<version>1.19.0</version>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>target/connector/dependencies</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>com.google.api-client</groupId>
									<artifactId>google-api-client</artifactId>
									<version>1.19.0</version>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>target/connector/dependencies</outputDirectory>
								</artifactItem>
								<artifactItem>
								<groupId>com.google.oauth-client</groupId>
									<artifactId>google-oauth-client</artifactId>
									<version>1.19.0</version>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>target/connector/dependencies</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>com.fasterxml.jackson.core</groupId>
									<artifactId>jackson-core</artifactId>
									<version>2.1.3</version>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>target/connector/dependencies</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<id>googlespreadsheet-library</id>
						<phase>package</phase>
						<goals>
							<goal>attached</goal>
						</goals>
						<configuration>
							<finalName>googlespreadsheet-connector-2.0.0</finalName>
							<appendAssemblyId>true</appendAssemblyId>

							<filters>
								<filter>
									${basedir}/src/main/assembly/filter.properties
								</filter>
							</filters>
							<descriptors>
								<descriptor>src/main/assembly/assemble-connector.xml
								</descriptor>
							</descriptors>


						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>

				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Bundle-Name>${project.artifactId}</Bundle-Name>
						<Export-Package>
							!javax.servlet,
							!javax.servlet.http,
							org.wso2.carbon.mediation.library.connectors.googlespreadsheet.*
						</Export-Package>
						<Import-Package>
							!javax.xml.soap,
							javax.xml.stream.*;
							version="1.0.1",
							org.apache.axis2.rpc.receivers;
							version="${axis2.osgi.version.range}",
							org.apache.axiom.*;
							version="${axiom.osgi.version.range}",
							org.apache.axis2;
							version="${axis2.osgi.version.range}",
							org.apache.axis2.description;
							version="${axis2.osgi.version.range}",
							org.apache.axis2.engine;
							version="${axis2.osgi.version.range}",
							org.apache.axis2.context;
							version="${axis2.osgi.version.range}",
							org.apache.commons.logging,
							org.apache.synapse,
							org.apache.synapse.config,
							org.apache.synapse.config.xml,
							org.apache.synapse.core,
							org.apache.synapse.core.axis2,
							org.apache.synapse.endpoints.*,
							org.apache.synapse.mediators.base,
							org.apache.synapse.libraries.*,
							org.apache.axis2.transport.base,
							org.wso2.carbon.core,
							org.wso2.carbon.registry.core.service;
							version=1.0.1,
							javax.xml.soap; version=1.0.0,
							*;resolution:=optional
						</Import-Package>
					</instructions>
				</configuration>
			</plugin>

		</plugins>
	</build>


</project>
