<template name="init" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="apiUrl" description="The url of the SOAP service being called"/>
    <parameter name="accessToken" description="The accessToken used to authenticate the API calls"/>
    <sequence>
        <property name="uri.var.apiUrl" expression="$func:apiUrl"/>
        <property name="uri.var.accessToken" expression="$func:accessToken"/>
        <!-- Adds the following property to avoid ESB altering the WS addressing headers from the response -->
        <property name="PRESERVE_WS_ADDRESSING" value="true"/>
    </sequence>
</template>