<template name="init" onError="fault" xmlns="http://ws.apache.org/ns/synapse">
   <parameter name="apiUrl" description="api url of the API"/>
   <parameter name="apiKey" description="api key of the API which will be base64 encoded and use to authentication "/>
	<sequence>
       <property name="uri.var.apiUrl" expression="$func:apiUrl"/>
       <property name="uri.var.apiKey" expression="$func:apiKey"/>
        <filter source="boolean(get-property('uri.var.apiUrl'))" regex="false">
            <then>
                <property name="uri.var.apiUrl" value="api.companieshouse.gov.uk"/>
            </then>
        </filter>
        <header name="Authorization" expression="fn:concat('Basic ',base64Encode(get-property('uri.var.apiKey')))"
                scope="transport"/>
	</sequence>
</template>
