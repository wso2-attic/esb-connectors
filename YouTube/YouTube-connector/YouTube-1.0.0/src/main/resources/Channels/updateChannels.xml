<template name="updateChannels" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="part"
               description="List of one or more channel resource properties that the API response will include"/>
    <parameter name="onBehalfOfContentOwner"
               description="Instruct the API to only return channels managed by the content owner"/>
    <parameter name="fields" description="Specifying which fields to include in a partial response"/>
    <parameter name="optionalParameters"
               description="Concatenations of optional parameters"/>
    <parameter name="id" description="The Id that YouTube uses to uniquely identify the channel"/>
    <parameter name="description" description="The channel's description"/>
    <parameter name="keywords" description="Keywords associated with your channel"/>
    <parameter name="defaultTab" 
               description="The content tab that users should display by default when viewers arrive at your channel page"/>
    <parameter name="trackingAnalyticsAccountId" 
               description="The ID for a Google Analytics account that you want to use to track and measure traffic to your channel"/>
    <parameter name="moderateComments" 
               description="Determines whether user-submitted comments left on the channel page need to be publicly visible"/>
    <parameter name="profileColor" description="A prominent color that complements the channel's content"/>
    <parameter name="showRelatedChannels" 
               description="Indicates whether YouTube should show an algorithmically generated list of related channels on your channel page"/>
    <parameter name="showBrowseView" 
               description="This setting indicates whether the channel page should display content in a browse or feed view"/>
    <parameter name="featuredChannelsTitle" description="The title that displays above the featured channels module"/>
    <parameter name="featuredChannelsUrls" 
               description="A list of up to 100 channels that you would like to link to from the featured channels module"/>
    <parameter name="unsubscribedTrailer" 
               description="The video that should play in the featured video module in the channel page's browse view for unsubscribed viewers"/>
    <parameter name="default" description="The default value for the property"/>
    <parameter name="value" description="The property value for a specified language"/>
    <parameter name="language" description="The language associated with the value"/>
    <parameter name="bannerExternalUrl"  description="Specifies the location of the banner image a channel"/>
    <parameter name="positionType"
               description="The manner in which the promoted item is positioned in the video player"/>
    <parameter name="cornerPosition" description="The corner of the player where the promoted item will appear"/>
    <parameter name="defaultTimingType"
               description="The timing method that determines when the promoted item is inserted during the video playback"/>
    <parameter name="defaultTimingOffsetMs"
               description="The time offset, specified in milliseconds, that determines when the promoted item appears during video playbacks"/>
    <parameter name="idType" description="The promoted item's type"/>
    <parameter name="videoId" 
               description="If the promoted item represents a video,then YouTube Id that YouTube assigned to identify that video"/>
    <parameter name="websiteUrl" 
               description="If the promoted item represents a website, this field represents the url pointing to the website"/>
    <parameter name="timingType"
               description="Determines when the promoted item is inserted during the video playback"/>
    <parameter name="timingOffsetMs"
               description="Specified in milliseconds, that determines when the promoted item appears during video playbacks"/>
    <parameter name="customMessage" description="A custom message to display for this promotion"/>
    <parameter name="promotedByContentOwner" description="Indicates whether the content owner's name will be shown when displaying the promotion"/>
