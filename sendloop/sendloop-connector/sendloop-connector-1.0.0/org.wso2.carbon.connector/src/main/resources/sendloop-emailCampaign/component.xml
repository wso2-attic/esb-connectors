<component name="sendloop-emailCampaign" type="synapse/template">
   <subComponents>
      <component name="createEmailCampaign">
         <file>createEmailCampaign.xml</file>
         <description>Creates a new email campaign.</description>
      </component>
      <component name="updateEmailCampaign">
         <file>updateEmailCampaign.xml</file>
         <description>Updates the preferences of the target campaign.</description>
      </component>
      <component name="getEmailCampaign">
         <file>getEmailCampaign.xml</file>
         <description>Returns the settings of the target email campaign.</description>
      </component>
      <component name="listEmailCampaigns">
         <file>listEmailCampaigns.xml</file>
         <description>Returns the list of email campaigns you have in your Sendloop account.</description>
      </component>
      <component name="listEmailCampaignsByStatus">
         <file>listEmailCampaignsByStatus.xml</file>
         <description>Returns campaigns based on status.</description>
      </component>
      <component name="sendEmailCampaign">
         <file>sendEmailCampaign.xml</file>
         <description>Set a ready campaign to be sent immediately or in the future.</description>
      </component>
   </subComponents>
</component>