<!-- Method Documentation URL: https://sendloop.com/help/api-006/subscriber-management#subscriber_browse -->
<template name="listSubscribers" xmlns="http://ws.apache.org/ns/synapse">
   <parameter name="listId" description="ID of the target list to get subscribers." />
   <parameter name="segmentId" description="ID of the segment in the target list to get subscribers." />
   <parameter name="startIndex" description="Page index to get subscribers from. Each call returns 100 records. Default is 0." />
   <sequence>
      <property name="uri.var.listId" expression="$func:listId" />
      <property name="uri.var.segmentId" expression="$func:segmentId" />
      <property name="uri.var.startIndex" expression="$func:startIndex" />
      <payloadFactory media-type="json">
         <format>
            {
                "APIKey": "$1",
                "ListID": "$2"
            }
         </format>
         <args>
            <arg expression="get-property('uri.var.apiKey')" />
            <arg expression="get-property('uri.var.listId')" />
         </args>
      </payloadFactory>
      <script language="js">
         <![CDATA[
            var startIndex = mc.getProperty('uri.var.startIndex');
            var segmentId = mc.getProperty('uri.var.segmentId');
            var jsonPayload = mc.getPayloadJSON();
            if (segmentId != null && segmentId != ""){
               jsonPayload.SegmentID = segmentId;
            }
            if (startIndex != null && startIndex != ""){
               jsonPayload.StartIndex = startIndex;
            }
            mc.setPayloadJSON(jsonPayload);
         ]]>
      </script>
      <!-- Set the axis2 property 'messageType' to application/x-www-form-urlencoded -->
      <property name="messageType" value="application/x-www-form-urlencoded" scope="axis2" />
      <call>
         <endpoint>
            <http method="post" uri-template="{+uri.var.apiUrl}/Subscriber.Browse/{+uri.var.format}" />
         </endpoint>
      </call>
      <!-- Remove custom Headers from the API Response -->
      <header name="X-Powered-By" action="remove" scope="transport" />
      <header name="Server" action="remove" scope="transport" />
      <header name="Expires" action="remove" scope="transport" />
      <header name="Cache-Control" action="remove" scope="transport" />
      <header name="Pragma" action="remove" scope="transport" />
      <header name="Vary" action="remove" scope="transport" />
      <header name="Transfer-Encoding" action="remove" scope="transport" />
   </sequence>
</template>