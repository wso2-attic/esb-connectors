<!-- Method Documentation URL: https://docs.atlassian.com/atlassian-confluence/REST/latest/#d3e249 -->
<template name="getContentProperty" xmlns="http://ws.apache.org/ns/synapse">
   <parameter name="id" description="The unique identifier of the content which the property is attached to." />
   <parameter name="key" description="The key of the content property." />
   <parameter name="expand"
      description="A comma separated list of properties to expand on the content properties. Default value: version." />
   <sequence>
      <property name="uri.var.id" expression="$func:id" />
      <property name="uri.var.key" expression="$func:key" />
      <property name="uri.var.expand" expression="$func:expand" />
      <filter source="boolean(get-property('uri.var.expand'))" regex="true">
         <then>
            <property name="uri.var.urlQuery" expression="fn:concat('?expand=',get-property('uri.var.expand'))" />
         </then>
      </filter>
      <call>
         <endpoint>
            <http method="get" uri-template="{+uri.var.apiUrl}/content/{+uri.var.id}/property/{+uri.var.key}{+uri.var.urlQuery}" />
         </endpoint>
      </call>
      <!-- Remove custom headers from the API response -->
      <header name="Vary" action="remove" scope="transport" />
      <header name="X-ASEN" action="remove" scope="transport" />
      <header name="X-AUSERNAME" action="remove" scope="transport" />
      <header name="X-Seraph-LoginReason" action="remove" scope="transport" />
      <header name="X-Content-Type-Options" action="remove" scope="transport" />
      <header name="Cache-Control" action="remove" scope="transport" />
      <header name="X-Frame-Options" action="remove" scope="transport" />
      <header name="X-XSS-Protection" action="remove" scope="transport" />
      <header name="X-Accel-Buffering" action="remove" scope="transport" />
      <header name="Content-Security-Policy" action="remove" scope="transport" />
   </sequence>
</template>