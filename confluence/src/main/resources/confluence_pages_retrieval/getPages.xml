<?xml version="1.0" encoding="UTF-8"?>
<template name="getPages" xmlns="http://ws.apache.org/ns/synapse">
    <parameter description="String spaceKey" name="spaceKey"/>
    <sequence>
        <property name="messageType" scope="axis2" value="text/xml"/>
        <payloadFactory media-type="xml">
            <format>
                <soapenv:Envelope
                    xmlns:soap="http://soap.rpc.confluence.atlassian.com"
                    xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/"
                    xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
                    <soapenv:Header/>
                    <soapenv:Body>
                        <soap:getPages soapenv:encodingStyle="http://schemas.xmlsoap.org/soap/encoding/">
                            <in0 xsi:type="xsd:string">$1</in0>
                            <in1 xsi:type="xsd:string">$2</in1>
                        </soap:getPages>
                    </soapenv:Body>
                </soapenv:Envelope>
            </format>
            <args>
                <arg evaluator="xml" expression="get-property('confluence.login.token')"/>
                <arg evaluator="xml" expression="$func:spaceKey"/>
            </args>
        </payloadFactory>
        <property name="messageType" scope="axis2" value="text/xml"/>
        <property name="HTTP_METHOD" scope="axis2" value="POST"/>
        <property action="remove" name="Content-Encoding" scope="transport"/>
        <header name="Action" value="urn:mediate"/>
        <header expression="$ctx:uri.var.confluence.url" name="To"/>
        <call>
            <endpoint>
                <default format="soap11">
                    <timeout>
                        <duration>60000</duration>
                        <responseAction>fault</responseAction>
                    </timeout>
                    <suspendOnFailure>
                        <initialDuration>2000</initialDuration>
                        <progressionFactor>1.0</progressionFactor>
                        <maximumDuration>3000</maximumDuration>
                    </suspendOnFailure>
                </default>
            </endpoint>
        </call>
    </sequence>
</template>
