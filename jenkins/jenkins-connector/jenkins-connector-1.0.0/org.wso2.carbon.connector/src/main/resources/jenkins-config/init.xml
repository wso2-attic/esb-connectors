<!-- Method Documentation URL: https://wiki.jenkins-ci.org/display/JENKINS/Remote+access+API -->
<template name="init" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="apiUrl" description="Base endpoint URL of Jenkins API."/>
    <parameter name="port" description="Port number"/>
    <parameter name="username" description="Username of the Jenkins account being accessed."/>
    <parameter name="password" description="Password corresponding to the username provided for the Jenkins account."/>
    <sequence>
        <property name="uri.var.apiUrl" expression="$func:apiUrl"/>
        <property name="uri.var.username" expression="$func:username"/>
        <property name="uri.var.password" expression="$func:password"/>
        <property name="uri.var.port" expression="$func:port"/>
        <filter xpath="$ctx:uri.var.port = '' ">
            <then>
                <property name="uri.var.apiUrl" expression="fn:concat($ctx:uri.var.apiUrl , ':' , '8080')"/>
            </then>
            <else>
                <filter source="boolean($ctx:uri.var.apiUrl)" regex="true">
                    <then>
                        <property name="uri.var.apiUrl"
                                  expression="fn:concat($ctx:uri.var.apiUrl , ':' , $ctx:uri.var.port)"/>
                    </then>
                    <else>
                        <property name="uri.var.apiUrl"
                                  expression="fn:concat(get-property('registry', 'connectors/Jenkins/apiUrl'), ':' ,
                                   get-property('registry', 'connectors/Jenkins/port'))"/>
                    </else>
                </filter>
            </else>
        </filter>
        <filter source="boolean($ctx:uri.var.username)" regex="true">
            <then>
                <property name="uri.var.username" expression="$ctx:uri.var.username"/>
            </then>
            <else>
                <property name="uri.var.username" expression="get-property('registry', 'connectors/Jenkins/username')"/>
            </else>
        </filter>
        <filter source="boolean($ctx:uri.var.password)" regex="true">
            <then>
                <property name="uri.var.password" expression="$ctx:uri.var.password"/>
            </then>
            <else>
                <property name="uri.var.password" expression="get-property('registry', 'connectors/Jenkins/password')"/>
            </else>
        </filter>
        <property name="Authorization"
                  expression="fn:concat('Basic ', base64Encode(fn:concat($ctx:uri.var.username, ':' , $ctx:uri.var.password)))"
                  scope="transport" type="STRING"/>
        <property name="Content-Type" value="application/xml" scope="transport"/>
    </sequence>
</template>
