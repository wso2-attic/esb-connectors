<component name="mailchimp-template" type="synapse/template">
   <subComponents>
      <component name="listTemplates">
         <file>listTemplates.xml</file>
         <description>Retrieve various templates available in the system, allowing some thing similar to MailChimp
            template gallery to be created.</description>
      </component>
      <component name="createTemplate">
         <file>createTemplate.xml</file>
         <description>Create a new user template, NOT campaign content. These templates can then be applied while
            creating campaigns.</description>
      </component>
   </subComponents>
</component>