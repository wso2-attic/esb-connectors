<template name="deleteGroup" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="groupId" description="A comma-separated list of groupâ€™s id"/>
    <sequence>
        <property name="uri.var.groupId" expression="$func:groupId"/>
        <header name="Content-Type" value="application/json" scope="transport"/>
        <call>
            <endpoint>
                <http method="delete"
                      uri-template="{uri.var.apiUrl}/contacts/metadata/groups/{uri.var.groupId}"/>
            </endpoint>
        </call>
    </sequence>
</template>