<component name="beetrack-route" type="synapse/template">
   <subComponents>
      <component name="createRoute">
         <file>createRoute.xml</file>
         <description>Create a new route in Beetrack account using the provided Parameters.</description>
      </component>
      <component name="getRoute">
         <file>getRoute.xml</file>
         <description>Retrieve details of a route identified by the provided route ID.</description>
      </component>
      <component name="listRoutes">
         <file>listRoutes.xml</file>
         <description>Retrieve a list of routes from Beetrack account.</description>
      </component>
      <component name="updateRoute">
         <file>updateRoute.xml</file>
         <description>Update details of the route identified by the provided route ID.</description>
      </component>
   </subComponents>
</component>
