<!-- Method Documentation URL: http://dev.agilezen.com/resources/comments.html#update_a_comment -->
<template name="updateComment" xmlns="http://ws.apache.org/ns/synapse">
   <parameter name="commentId" description="ID of the comment to update." />
   <parameter name="storyId" description="ID of the story to which the comment belongs." />
   <parameter name="projectId" description="ID of the project to which the story belongs." />
   <parameter name="text" description="The text of the comment." />
   <sequence>
      <property name="uri.var.commentId" expression="$func:commentId" />
      <property name="uri.var.storyId" expression="$func:storyId" />
      <property name="uri.var.projectId" expression="$func:projectId" />
      <property name="uri.var.text" expression="$func:text" />
      <property name="uri.var.urlQuery" value="" />
      <script language="js">
         <![CDATA[
            var jsonPayload = new Object();
            var enrichments = mc.getProperty('uri.var.enrichments');
            var text = mc.getProperty('uri.var.text');
            if (enrichments != null && enrichments != "") {
               mc.setProperty('uri.var.urlQuery', '?with=' + enrichments);
            }         
            if (text != null && text != ""){
               jsonPayload.text = text;
            }            
            mc.setPayloadJSON(jsonPayload);
         ]]>
      </script>
      <call>
         <endpoint>
            <http method="put"
               uri-template="{uri.var.apiUrl}/projects/{uri.var.projectId}/stories/{uri.var.storyId}/comments/{uri.var.commentId}{+uri.var.urlQuery}" />
         </endpoint>
      </call>
      <!-- Remove custom Headers from the API Response -->
      <header name="Access-Control-Allow-Origin" action="remove" scope="transport" />
      <header name="X-AspNet-Version" action="remove" scope="transport" />
      <header name="X-AspNetMvc-Version" action="remove" scope="transport" />
      <header name="X-Powered-By" action="remove" scope="transport" />
      <!-- Proceed if the API response status of the recent API call is 302 and 'Location ' header is returned with it. -->
      <property name="uri.var.statusCode" expression="$axis2:HTTP_SC" />
      <filter source="get-property('uri.var.statusCode')" regex="302">
         <then>
            <property name="uri.var.location" expression="get-property('transport','Location')" />
            <agilezen.getRedirection>
               <statusCode>{$ctx:uri.var.statusCode}</statusCode>
               <location>{$ctx:uri.var.location}</location>
            </agilezen.getRedirection>
         </then>
      </filter>
   </sequence>
</template>